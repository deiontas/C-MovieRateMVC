@model MovieEntity

@{
    ViewData["Title"] = "Adding New Movie";
}

<form asp-action="CreateMovie" asp-controller="Movies" method="post">

    <div class ="row">
        <div class ="col-lg-12">
            <label> Movie Title</label>
            <input asp-for="Title" type="text"  class="form-control" required>
        </div>

        <div class="form-group">
            <label>Year</label>
            <input asp-for="Year" type="text" class="form-control" required>

        <div class="card-footer">
            <center>
                <button type="submit" class= "btn btn-primary">Create Movie</button>
                <a asp-action="Index" asp-controller="Movies" class="btn btn-secondary"> </a>
            </center>
        </div>
        </div>
    </div>
</form>